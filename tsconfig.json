{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@": ["."],
      "@/*": ["./*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@enums": ["./src/enums"],
      "@enums/*": ["./src/enums/*"],
      "@helpers": ["./src/helpers"],
      "@helpers/*": ["./src/helpers/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@types": ["./src/types"],
      "@types/*": ["./types/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "types": ["node", "react"]
  },
  "include": ["**/*.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "public"]
}
